    <script>

        // 구글 커스텀 버튼 클릭
        const googleBtn = document.getElementById('google-login-btn');
        googleBtn.addEventListener('click', () => {
            document.querySelector('.g_id_signin div[role=button]').click();
        });

        // 구글 사용자 정보 가져오기 및 로그인/회원가입 진행
        function handleCredentialResponse(response) 
        {
            try
            {
                const responsePayload = decodeJwtResponse(response.credential);
    
                let userInfo = {
                    id : responsePayload.sub,
                    email : responsePayload.email
                }

                $.ajax({
                    type: "POST",
                    url : "/user/googleLogin",
                    data: userInfo,
                    dataType: 'json',
                    success: function ( response ) 
                    {
                        // 회원 가입 || 회원 가입 진행중에 종료한 경우 다시 회원가입 페이지로 
                        if(response.signUp === true || response.inProgress)
                        {
                            window.location.href=`${base_url}/auth/signUp`; // 가입 화면으로 이동
                        }
                        // 로그인
                        else if(response.signUp === false)
                        {
                            let queryString = `?uid=${response.uid}`
                            let encryptedString = window.btoa(encodeURIComponent(queryString)); // 쿼리 스트링 암호화
                            location.href = `/message/${encryptedString}`;               // 포장마차 화면으로 이동
                        }
                    },
                    error: function (err)
                    {  
                        throw err;
                    }
                })
            }
            catch (err)
            {
                console.log(`구글 로그인/회원가입 Error - ${err}`);
            }     
        }

        function decodeJwtResponse(token) 
        {
            try
            {
                var base64Url = token.split('.')[1];
                var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
                var jsonPayload = decodeURIComponent(atob(base64).split('').map(
                                    function(c) 
                                    {
                                        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
                                    }
                                ).join(''));

                return JSON.parse(jsonPayload);
            }
            catch (err)
            {
                console.log(`decode error - ${err}`);
            }
        };
    </script>       
